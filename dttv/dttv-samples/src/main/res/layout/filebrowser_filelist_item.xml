<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
  <ImageView
      android:id="@+id/filebrowser_file_type"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="5dp"
      android:src="@drawable/filebrowser_file_type_file"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/filebrowser_file_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/filebrowser_file_item_color"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/filebrowser_file_size"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="right"
          android:textColor="@color/filebrowser_file_item_color"
          android:textSize="10sp"
          />
      <TextView
          android:id="@+id/filebrowser_file_date"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textColor="@color/filebrowser_file_item_color"
          android:textSize="10sp"
          />
      <TextView
          android:id="@+id/filebrowser_file_access"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="left"
          android:textColor="@color/filebrowser_file_item_color"
          android:textSize="10sp"
          />
      <TextView
          android:id="@+id/filebrowser_file_suffix"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="left"
          android:textColor="@color/filebrowser_file_item_color"
          android:textSize="10sp"
          />
      <TextView
          android:id="@+id/filebrowser_file_fullname"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="left"
          android:textColor="@color/filebrowser_file_item_color"
          android:textSize="10sp"
          />

    </LinearLayout>
  </LinearLayout>
  <ImageView
      android:id="@+id/filebrowser_file_selected"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingRight="5dp"
      android:src="@drawable/filebrowser_file_unselected"
      />

</LinearLayout>