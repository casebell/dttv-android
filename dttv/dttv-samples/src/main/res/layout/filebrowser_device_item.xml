<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
  <ImageView
      android:id="@+id/filebrowser_device_type"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="5dp"
      android:src="@drawable/filebrowser_file_type_device"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/filebrowser_device_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingLeft="5dp"
        android:textColor="@color/black_3333"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/filebrowser_device_size"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="right"
          android:textColor="@color/black_6666"
          android:textSize="10sp"
          android:textStyle="italic"
          />
      <TextView
          android:id="@+id/filebrowser_device_access"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:gravity="center"
          android:textColor="@color/black_6666"
          android:textSize="10sp"
          android:textStyle="italic"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>