<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="10dp">
	<ImageView
	    android:id="@+id/media_row_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:minWidth="60dp"
		android:minHeight="60dp"
		android:layout_centerVertical="true"
	    android:background="@drawable/dt_player_video_icon" />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/media_row_icon"
		android:orientation="vertical"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dp">
		<TextView
			android:id="@+id/media_row_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbars="vertical"
			android:fadingEdge="vertical"
			android:singleLine="true"
			android:textColor="@color/black_3333"
			android:textSize="16sp"
			/>
		<TextView
			android:id="@+id/media_row_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbars="vertical"
			android:fadingEdge="vertical"
			android:layout_marginTop="10dp"
			android:textSize="12sp"
			android:textColor="@color/black_6666"
			android:singleLine="true"
			android:layout_below="@+id/media_row_name"
			android:layout_toRightOf="@+id/media_row_icon"
			/>
	</LinearLayout>

	<TextView
	    android:id="@+id/media_row_uri"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="vertical"
		android:fadingEdge="vertical"
		android:singleLine="true"
		android:visibility="gone"
		android:layout_below="@+id/media_row_artist" />
</RelativeLayout>