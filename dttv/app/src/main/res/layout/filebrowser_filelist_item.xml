<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	>
    <ImageView
    	android:id="@+id/filebrowser_file_type"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent" 
    	android:paddingLeft="5dp"
    	android:src="@drawable/filebrowser_file_type_file"
    	/>		
    <LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    >
		<TextView android:layout_weight="1" 
			android:id="@+id/filebrowser_file_name"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"	 
	    	android:paddingLeft="5dp"
	    	android:gravity="bottom"
	    	android:textSize="18sp"			    		
	    	android:textStyle="bold"
			android:ellipsize="middle"
			android:singleLine="true"
	    	android:textColor="@color/filebrowser_file_item_color"
	    	/>
	    <LinearLayout android:layout_weight="2" 
			android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"		    
		    >
		    <TextView android:layout_weight="1"
				android:id="@+id/filebrowser_file_size"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"	 		    			    	
		    	android:gravity="right"		
		    	android:textSize="10sp"			    	
		    	android:textColor="@color/filebrowser_file_item_color"
	    	/>
		    <TextView 
				android:id="@+id/filebrowser_file_date"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"	
		    	android:textSize="10sp"		    	
		    	android:textColor="@color/filebrowser_file_item_color"
	    	/>	   
		    <TextView 
				android:id="@+id/filebrowser_file_access"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"			    	 	
		    	android:gravity="left"
		    	android:textSize="10sp"			    	
		    	android:textColor="@color/filebrowser_file_item_color"
	    	/>
	    	 <TextView 
				android:id="@+id/filebrowser_file_suffix"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"			    	 	
		    	android:gravity="left"
		    	android:textSize="10sp"			    	
		    	android:textColor="@color/filebrowser_file_item_color"
	    	/>
	    	<TextView 
				android:id="@+id/filebrowser_file_fullname"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"			    	 	
		    	android:gravity="left"
		    	android:textSize="10sp"			    	
		    	android:textColor="@color/filebrowser_file_item_color"
	    	/>
	    	
	    </LinearLayout>	
	</LinearLayout>    	
    <ImageView
    	android:id="@+id/filebrowser_file_selected"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent" 
    	android:paddingRight="5dp"
    	android:src="@drawable/filebrowser_file_unselected"
    	/>	
	
</LinearLayout>